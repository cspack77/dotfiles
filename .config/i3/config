# Shutdown, Reboot, Lock Screen, and Logout #657b83
set $sysmenu "system:  [P]oweroff  re[B]oot  [S]uspend  [M]onitor off [L]ock  logou[T] "
bindsym $mod+Shift+Return      mode $sysmenu
mode $sysmenu {
    bindsym p         exec --no-startup-id close-all-windows.sh && shutdown -P now
    bindsym b         exec --no-startup-id close-all-windows.sh && shutdown -r now
    bindsym s         exec systemctl suspend, mode "default"
    bindsym m         exec sleep 1 && xset dpms force off, mode "default"
    bindsym l         exec i3lock.sh, mode "default"
    bindsym t         exec --no-startup-id close-all-windows.sh && i3-msg exit, mode "default"
    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}

# Start VM
set $vmmenu "Guest VM: [W]indows 10  Arch [C]innamon  Arch [i]3  [V]oid [M]acOS "
bindsym $mod+Shift+v mode $vmmenu
mode $vmmenu {
    bindsym w         exec --no-startup-id startvm.sh win10, mode "default"
    bindsym c         exec --no-startup-id startvm.sh ArchCinn, mode "default"
    bindsym i         exec --no-startup-id startvm.sh archi3, mode "default"
    bindsym v         exec --no-startup-id startvm.sh void, mode "default"
    bindsym m         exec --no-startup-id /home/ted/src/OSX-KVM/boot-passthrough.sh, mode "default"
    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}

# Bind audio keys
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 1 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 1 -5% #decrease sound volume
